FROM ubuntu:latest
MAINTAINER Adrian George Oprea<adrian@codesi.nz>

# Configure latest NodeJS sources (node v0.12)
curl -sL https://deb.nodesource.com/setup_0.12 | sudo bash -

##################
##  ESSENTIALS  ##
##################
RUN apt-get -y update && \
    apt-get -y upgrade && \
    apt-get install -q -y \
        apt-utils \
        build-essential \
        git \
        vim
        nodejs \
        node-legacy \
        npm
